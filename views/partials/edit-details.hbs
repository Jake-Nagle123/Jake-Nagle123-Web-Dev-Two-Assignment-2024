{{> menu}}

<form class="box" action="/user/{{user._id}}/update" method="POST">
  <label>Update User Details:</label>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <input class="input" type="text" placeholder="Enter new first name" name="firstName" value="{{user.firstName}}">
        </div>
        <div class="field">
          <input class="input" type="text" placeholder="Enter new second name" name="secondName" value="{{user.secondName}}">
        </div>
        <div class="field">
          <input class="input" type="text" placeholder="Enter new email" name="email" value="{{user.email}}">
        </div>
        <div class="field">
          <input class="input" type="password" placeholder="Enter new password" name="password" value="{{user.password}}">
        </div>
      </div>
    </div>
    <button class="button is-info">
      Update Details
    </button>
</form>