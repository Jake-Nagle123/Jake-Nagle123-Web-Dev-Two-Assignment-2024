{{> menu}}

<form class="box" action="/user/{{user._id}}/updateuser" method="POST">
  <label>Update User Details:</label>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <input class="input" type="text" placeholder="Enter new email" name="email">
        </div>
        <div class="field">
          <input class="input" type="password" placeholder="Enter new password" name="password">
        </div>
      </div>
    </div>
    <button class="button is-info">
      Update Details
    </button>
</form>