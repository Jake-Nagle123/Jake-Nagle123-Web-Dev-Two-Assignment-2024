{{> welcome-menu active="signup"}}

<section class="section">
  <h1 class="title">
    Sign Up
  </h1>
  <p>
    Register below to get even more features offered by the company.
  </p>
  <form action="/register" method="POST">
    <label class="label">Register</label>
    <label class="label">Name</label>
    <div class="field is-horizontal">
      <div class="field-body">
        <div class="field">
          <input class="input" type="text" placeholder="Enter first name" name="firstName">
        </div>
        <div class="field">
          <input class="input" type="text" placeholder="Enter last name" name="lastName">
        </div>
      </div>
    </div>
    <div class="field">
      <label class="label">Email</label>
      <input class="input" type="text" placeholder=""
    </div>
  </form>
</section>